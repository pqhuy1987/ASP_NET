@model Models.ProjectViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout_Temp.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default-2">
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @{
                            if (Model == null)
                            {
                                    using (Html.BeginForm("Create", "Project", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true)

                                        <label> NHẬP MỚI TÊN DỰ ÁN: </label>
                                        <div class="form-group">
                                            @Html.TextBoxFor(model => Model.SelectedProject.Project_Name, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => Model.SelectedProject.Project_Name, null, new { @class = "text-danger", style = "font-weight:bold" })
                                        </div>
                                        <p>
                                            <button type="submit" value="Thêm" class="btn btn-primary"> <b>THÊM</b> </button>
                                        </p>
                                    }
                            }
                            else
                            {
                                    using (Html.BeginForm("Create", "Project", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true)

                                        <label> NHẬP MỚI TÊN DỰ ÁN: </label>
                                        <div class="form-group">
                                            @Html.TextBoxFor(model => Model.SelectedProject.Project_Name, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => Model.SelectedProject.Project_Name, null, new { @class = "text-danger", style = "font-weight:bold" })
                                        </div>
                                        <p>
                                            <button type="submit" value="Thêm" class="btn btn-primary"> <b>THÊM</b> </button>
                                        </p>
                                    }
                            }
                        }
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
