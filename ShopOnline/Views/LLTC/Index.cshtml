@model Models.LLTCViewModel

@{
    int counter = 3;
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tên Công Ty/NTP/ĐTC</th>
                            <th>Tên Giám Đốc</th>
                            <th>SĐT-Giám Đốc</th>
                            <th>Khu Vực</th>
                            <th>Khả Năng Huy Động</th>
                            <th>Đánh Giá</th>
                            <th>Hợp Tác</th>
                            <th>Ghi Chú</th>
                            <th>Tình Trạng</th>
                            <th>Chọn</th>
                            <th>Xóa</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model.LLTC)
                        {
                            <tr class="odd gradeX">
                                <td>@item.ID</td>
                                @{
                                    foreach (var item1 in Model.LLTC)
                                    {
                                        if (item.Main_Name_LLTC == item1.Main_Name_LLTC)
                                        {
                                            counter = 2;
                                            break;
                                        }
                                        else
                                        {
                                            counter = 1;
                                        }
                                    }
                                    if (counter == 2)
                                    {
                                        <td>@item.Main_Name_LLTC</td>
                                    }
                                    else if (counter == 1)
                                    {
                                        <td style="color: red">@item.Main_Name_LLTC (Không tồn tại)</td>

                                    }

                                }
                                <td>@item.Main_Name_Job</td>
                                <td>@item.Main_Number</td>
                                <td>@item.Main_Area</td>
                                <td>@item.Main_Total_Number</td>
                                <td>@item.Main_Rate</td>
                                <td>@item.Main_Note</td>
                                <td>@item.Main_Status</td>
                                <td>

                                    <form action="@Url.Action("Edit", "Catelory",  new { id = @item.ID })" method="post">
                                        <input type="submit" value="Select" />
                                    </form>
                                </td>
                                <td>

                                    <form action="@Url.Action("Delete", "Catelory", new { id = @item.ID })" method="post">
                                        <input type="submit" value="Delete" />
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>