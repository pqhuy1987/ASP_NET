@model Models.LLTCViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout_Temp.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-info">
            <div class="panel-heading" style="font-size:16.5px"><b>CHI TIẾT LỰC LƯỢNG THI CÔNG </b></div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover">
                    @using (Ajax.BeginForm("Details", new AjaxOptions
                                    {
                                        HttpMethod = "Get",
                                        InsertionMode = System.Web.Mvc.Ajax.InsertionMode.Replace
                                    }))
                    {
                        <button type="submit" class="btn-sub btn-primary" style="margin-bottom:10px"> <b> +THÊM DỰ ÁN CHO ĐỘI </b></button>
                    }
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Công Trường</th>
                            <th>Quân Số Đăng Ký</th>
                            <th>Công Việc Chi Tiết</th>
                            <th>Đội Trưởng Tại Công Trường</th>
                            <th>SĐT Đội Trưởng</th>
                            <th>Ngày Bắt Đầu</th>
                            <th>Ngày Kết Thúc</th>
                            <th>Trạng Thái</th>
                            <th>Sửa</th>
                            <th>Xóa</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int i = 1;}
                        @foreach (var item in Model.LLTC)
                        {
                            <tr class="odd gradeX">
                                <td>@i</td>
                                <td>@item.Main_Name_LLTC</td>
                                <td>@item.Main_Name_Ower</td>
                                <td>@item.Main_Name_Ower</td>
                                <td>@item.Main_Number</td>
                                <td>@item.Main_Total_Number</td>
                                <td>@item.Main_Name_Job</td>
                                <td>@item.Main_Area</td>
                                <td>@item.Main_Status</td>
                                <td>
                                    @using (Ajax.BeginForm("Details", new AjaxOptions
                                    {
                                                        HttpMethod = "Get",
                                                        InsertionMode = System.Web.Mvc.Ajax.InsertionMode.Replace
                                    }))
                                    {
                                         <button type="submit" class="btn-sub btn-success"><b>Sửa</b></button>
                                    }
                                </td>
                                <td>
                                    @using (Ajax.BeginForm("Details", new AjaxOptions
                                    {
                                         HttpMethod = "Get",
                                         InsertionMode = System.Web.Mvc.Ajax.InsertionMode.Replace
                                    }))
                                    {
                                            <button type="submit" class="btn-sub btn-danger"><b>Xóa</b></button>
                                    }
                                </td>

                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
            <div class="panel-footer"><b></b></div>
        </div>
    </div>
    @using (Ajax.BeginForm("Details", new AjaxOptions
                {
                    HttpMethod = "Get",
                    InsertionMode = System.Web.Mvc.Ajax.InsertionMode.Replace
                }))
    {
        <div class="col-xs-6 col-md-2">
            <div class="form-group input-group">
                <span class="input-group-addon">Công Trường</span>
                <input type="text" class="form-control" placeholder="">
            </div>
        </div>
        <div class="col-xs-6 col-md-2">
            <div class="form-group input-group">
                <span class="input-group-addon">Quân Số Đăng Ký</span>
                <input type="text" class="form-control" placeholder="">
            </div>
        </div>
        <div class="col-xs-6 col-md-4">
            <div class="form-group input-group">
                <span class="input-group-addon">Chi Tiết Công Việc</span>
                @Html.TextBoxFor(model => Model.SelectedLLTC.Main_Number, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => Model.SelectedLLTC.Main_Number, null, new { @class = "text-danger", style = "font-weight:bold" })
            </div>
        </div>
        <div class="col-xs-6 col-md-4">
            <div class="form-group input-group">
                <span class="input-group-addon">Đội Trưởng</span>
                <input type="text" class="form-control" placeholder="">
            </div>
        </div>
        <div class="col-xs-6 col-md-6">
            <div class="form-group input-group">
                <span class="input-group-addon">SĐT Đội Trưởng</span>
                <input type="text" class="form-control" placeholder="">
            </div>
        </div>
        <div class="col-xs-6 col-md-6">
            <div class="form-group input-group">
                <span class="input-group-addon">Trạng Thái</span>
                <input type="text" class="form-control" placeholder="">
            </div>
        </div>
        <div class="col-xs-6 col-md-8">
            <div class="form-group input-group">
                <span class="input-group-addon">Ngày Bắt Đầu</span>
                <input type="text" class="form-control" placeholder="">
            </div>
        </div>
        <div class="col-xs-6 col-md-8">
            <div class="form-group input-group">
                <span class="input-group-addon">Ngày Kết Thúc</span>
                <input type="text" class="form-control" placeholder="">
            </div>
        </div>
    <div class="col-lg-12">
        <button type="submit" style=" margin-left:0px; margin-bottom:10px" class="btn btn-primary btn-lg btn-block"><b>THÊM</b></button>
    </div>
    }
</div>

