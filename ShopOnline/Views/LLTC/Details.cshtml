@model Models.LLTCViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout_Temp.cshtml";
}

<div class="row">
    <label style="background-color: #F0F1F4; color: white; border-radius: 15px; padding: 15px; display: block; ">CHI TIẾT CÔNG TRƯỜNG</label>
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Công Trường</th>
                            <th>Quân Số Đăng Ký</th>
                            <th>Đội Trưởng Tại Công Trường</th>
                            <th>SĐT Đội Trưởng</th>
                            <th>Ngày Bắt Đầu</th>
                            <th>Ngày Kết Thúc</th>
                            <th>Trạng Thái</th>
                            <th>Sửa</th>
                            <th>Xóa</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int i = 1;}
                        @foreach (var item in Model.LLTC)
                        {
                            <tr class="odd gradeX">
                                <td>@i</td>
                                <td>@item.Main_Name_LLTC</td>
                                <td>@item.Main_Name_Ower</td>
                                <td>@item.Main_Number</td>
                                <td>@item.Main_Total_Number</td>
                                <td>@item.Main_Name_Job</td>
                                <td>@item.Main_Area</td>
                                <td>@item.Main_Status</td>
                                <td>
                                    <button type="submit" onclick="window.open('/LLTC/Edit/'+@item.ID , 'windowName', 'width=700, height=400, left=24, top=24, scrollbars, resizable')" class="btn-sub btn-success"><b>Sửa</b></button>
                                </td>
                                <td>
                                    <button type="submit" onclick="window.open('/LLTC/Delete/'+@item.ID , 'windowName', 'width=700, height=400, left=24, top=24, scrollbars, resizable')" class="btn-sub btn-danger"><b>Xóa</b></button>
                                </td>

                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

