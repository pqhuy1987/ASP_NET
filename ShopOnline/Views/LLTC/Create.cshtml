@model Models.LLTCViewModel

@{
    int counter = 3;
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_2.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $(".digit").keydown(function (e) {

            if (($("#prefixLogin").val().length < 9) || ($("#prefixLogin").val().length > 10)) {
                $(':input[type="submit"]').prop('disabled', true);
                console.log($("#prefixLogin").val().length);
                return true;
            } else {
                $(':input[type="submit"]').prop('disabled', false);
                console.log($("#prefixLogin").val().length);
                return true;
            }
        });
    });
</script>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>TÊN CÔNG TY/NTP/ĐTC</th>
                            <th>TÊN GIÁM ĐỐC</th>
                            <th>SĐT-GIÁM ĐỐC</th>
                            <th>KHU VỰC</th>
                            <th>KHẢ NĂNG HUY ĐỘNG</th>
                            <th>HỢP TÁC</th>
                            <th>GHI CHÚ</th>
                            <th>TÌNH TRẠNG</th>
                            <th>CHỌN</th>
                            <th>XÓA</th>
                        </tr>
                    </thead>
                    <tbody>
                @{
                    if (Model.LLTC == null)
                    {
                        <tr>
                            <th>ID</th>
                            <th>TÊN CÔNG TY/NTP/ĐTC</th>
                            <th>Tên GIÁM ĐỐC</th>
                            <th>SĐT-GIÁM ĐỐC</th>
                            <th>KHU VỰC</th>
                            <th>KHẢ NĂNG HUY ĐỘNG</th>
                            <th>HỢP TÁC</th>
                            <th>GHI CHÚ</th>
                            <th>TÌNH TRẠNG</th>
                            <th>CHỌN</th>
                            <th>XÓA</th>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model.LLTC)
                        {
                            <tr class="odd gradeX">
                                <td>@item.ID</td>
                                <td>@item.Main_Name_LLTC</td>
                                <td>@item.Main_Name_Ower</td>
                                <td>@item.Main_Number</td>
                                <td>@item.Main_Area</td>
                                <td>@item.Main_Total_Number</td>
                                <td>@item.Main_Rate</td>
                                <td>@item.Main_Name_Job</td>
                                <td>@item.Main_Note</td>
                                <td>
                                    <form action="@Url.Action("Create", "LLTC", new { id = @item.ID, number = 123 })" method="post">
                                        <input type="submit" value="Chọn" />
                                    </form>
                                </td>
                                <td>
                                    <form action="@Url.Action("Delete", "Catelory", new { id = @item.ID })" method="post">
                                        <input type="submit" value="Xóa" />
                                    </form>
                                </td>
                            </tr>
                        }        
                    }
                }

                    </tbody>
                </table>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm("Index", "Catelory", FormMethod.Post))
                        {
                            <button type="submit" style="margin-left:0px; margin-bottom:10px" class="btn btn-primary">THÊM MỚI ĐỘI THI CÔNG</button>
                        }
                        @{
                            if (Model.DisplayMode == "Edit")
                            {
                                using (Html.BeginForm("Save", "LLTC", new { id = Model.SelectedLLTC.ID }, FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true)

                                    <div class="form-group">
                                        <label>TÊN CÔNG TY/NTP/ĐTC: </label>
                                        @Html.TextBoxFor(model => model.SelectedLLTC.Main_Name_LLTC, new { @class = "form-control-2" })
                                        @Html.ValidationMessageFor(model => model.SelectedLLTC.Main_Name_LLTC, null, new { @class = "danger" })
                                    </div>

                                    <div class="form-group">
                                        <label>TÊN GIÁM ĐỐC: </label>
                                        @Html.TextBoxFor(model => model.SelectedLLTC.Main_Name_Ower, new { @class = "form-control-2" })
                                        @Html.ValidationMessageFor(model => model.SelectedLLTC.Main_Name_Ower, null, new { @class = "danger" })
                                    </div>

                                    <div class="form-group">
                                        <label>SỐ ĐT GIÁM ĐỐC: </label>  <b style="color:red">(THÔNG TIN BẮT BUỘC)</b>
                                        @Html.TextBoxFor(model => model.SelectedLLTC.Main_Number, new { @class = "digit", @id = "prefixLogin", @type = "number" })
                                        @Html.ValidationMessageFor(model => model.SelectedLLTC.Main_Number, null, new { @class = "danger" })
                                    </div>
                            
                                    <div class="form-group">
                                        <label>KHU VỰC: </label>
                                        @Html.TextBoxFor(model => model.SelectedLLTC.Main_Area, new { @class = "digit" })
                                        <span id="errormsg"></span>
                                        @Html.ValidationMessageFor(model => model.SelectedLLTC.Main_Area, null, new { @class = "danger" })
                                    </div>
                            
                                    <div class="form-group">
                                        <label>KHẢ NĂNG HUY ĐỘNG: </label>
                                        @Html.TextBoxFor(model => model.SelectedLLTC.Main_Total_Number, new { @class = "digit" })
                                        <span id="errormsg"></span>
                                        @Html.ValidationMessageFor(model => model.SelectedLLTC.Main_Total_Number, null, new { @class = "danger" })
                                    </div>

                                    <div class="form-group">
                                        <label>ĐÁNH GIÁ: </label>
                                        @Html.DropDownListFor(model => model.SelectedLLTC.Main_Rate, new List<SelectListItem>()
                                        {
                                            new SelectListItem(){Text = "Hoạt Động", Value = "Hoạt Động"},
                                            new SelectListItem(){Text = "Đã Ngưng", Value = "Đã Ngưng"}
                                        }, new { @class = "form-control-2" })
                                    </div>

                                    <div class="form-group">
                                        <label>HỢP TÁC: </label>
                                        @Html.TextBoxFor(model => model.SelectedLLTC.Main_Status, new { @class = "form-control-2" })
                                        @Html.ValidationMessageFor(model => model.SelectedLLTC.Main_Status, null, new { @class = "danger" })
                                    </div>

                                    <p>
                                        <button type="submit" class="btn btn-primary" value="Lưu">LƯU</button>
                                    </p>
                                }
                            }
                            else
                            {
                                using (Html.BeginForm("Create", "LLTC", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true)

                                    <div class="form-group">
                                        <label>TÊN CÔNG TY/NTP/ĐTC: </label>
                                        @Html.TextBoxFor(model => model.SelectedLLTC.Main_Name_LLTC, new { @class = "form-control-2" })
                                        @Html.ValidationMessageFor(model => model.SelectedLLTC.Main_Name_LLTC, null, new { @class = "danger" })

                                    </div>

                                    <div class="form-group">
                                        <label>TÊN GIÁM ĐỐC: </label>
                                        @Html.TextBoxFor(model => model.SelectedLLTC.Main_Name_Ower, new { @class = "form-control-2" })
                                        @Html.ValidationMessageFor(model => model.SelectedLLTC.Main_Name_Ower, null, new { @class = "danger" })
                                    </div>

                                    <div class="form-group">
                                        <label>SỐ ĐT GIÁM ĐỐC: </label>  <b style="color:red">(THÔNG TIN BẮT BUỘC)</b>
                                        @Html.TextBoxFor(model => model.SelectedLLTC.Main_Number, new { @class = "digit", @id = "prefixLogin", @type = "number" })
                                        @Html.ValidationMessageFor(model => model.SelectedLLTC.Main_Number, null, new { @class = "danger" })
                                    </div>
                            
                                    <div class="form-group">
                                        <label>KHU VỰC: </label>
                                        @Html.TextBoxFor(model => model.SelectedLLTC.Main_Area, new { @class = "digit" })
                                        <span id="errormsg"></span>
                                        @Html.ValidationMessageFor(model => model.SelectedLLTC.Main_Area, null, new { @class = "danger" })
                                    </div>
                            
                                    <div class="form-group">
                                        <label>KHẢ NĂNG HUY ĐỘNG: </label>
                                        @Html.TextBoxFor(model => model.SelectedLLTC.Main_Total_Number, new { @class = "digit" })
                                        <span id="errormsg"></span>
                                        @Html.ValidationMessageFor(model => model.SelectedLLTC.Main_Total_Number, null, new { @class = "danger" })
                                    </div>

                                    <div class="form-group">
                                        <label>HỢP TÁC: </label>
                                        @Html.DropDownListFor(model => model.SelectedLLTC.Main_Rate, new List<SelectListItem>()
                                        {
                                            new SelectListItem(){Text = "Tích Cực Hợp Tác", Value = "Tích Cực Hợp Tác"},
                                            new SelectListItem(){Text = "Hợp Tác Khá", Value = "Hợp Tác Khá"},
                                            new SelectListItem(){Text = "Hợp Tác Vừa", Value = "Hợp Tác Vừa"},
                                            new SelectListItem(){Text = "Hợp Tác Kém", Value = "Hợp Tác Kém"},
                                            new SelectListItem(){Text = "Không Hợp Tác", Value = "Không Hợp Tác"},
                                        }, new { @class = "form-control-2" })
                                    </div>

                                    <div class="form-group">
                                        <label>HỢP TÁC: </label>
                                        @Html.TextBoxFor(model => model.SelectedLLTC.Main_Status, new { @class = "form-control-2" })
                                        @Html.ValidationMessageFor(model => model.SelectedLLTC.Main_Status, null, new { @class = "danger" })
                                    </div>
                                    <p>
                                        <button type="submit" class="btn btn-primary" value="Thêm">THÊM</button>
                                    </p>

                                }
                            }

                        }
                    </div>

                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>





