@model Models.CS_tbWorkCountViewModels

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout_Temp.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-info">
            <div class="panel-heading" style="font-size:16.5px"><b>CHẤM CÔNG </b></div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Đội</th>                           
                            <th>Công Việc Chi Tiết</th>
                            <th>Ngày Bắt Đầu</th>
                            <th>Ngày Kết Thúc</th>
                            <th>Trạng Thái</th>
                            <th>Quân Số Đăng Ký</th>
                            <th>Quân Số Thực Tế</th>
                            <th>Sửa</th>
                            <th>Xóa</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int i = 1; int j = 0;}
                        @foreach (var item in Model.CS_tbWorkCount_Sub)
                        {
                            <tr class="odd gradeX">
                                <td>@i</td>
                                <td>@Model.CS_tbLLTCTypeSub[j].</td>
                                <td>@Model.CS_tbLLTCTypeSub[j].CS_tbLLTCNameJobDetailsSub</td>
                                <td>@(Model.CS_tbLLTCTypeSub[j].CS_tbLLTCStartDateSub.HasValue ? @Model.CS_tbLLTCTypeSub[j].CS_tbLLTCStartDateSub.Value.ToString("dd/MM/yyyy") : "")</td>
                                <td>@(Model.CS_tbLLTCTypeSub[j].CS_tbLLTCEndDateSub.HasValue ? @Model.CS_tbLLTCTypeSub[j].CS_tbLLTCEndDateSub.Value.ToString("dd/MM/yyyy") : "")</td>
                                <td>@Model.CS_tbLLTCTypeSub[j].CS_tbLLTCStatusSub</td>
                                <td>@Model.CS_tbLLTCTypeSub[j].CS_tbLLTCNumberRegisterSub</td>
                                <td>
                                    <input type="checkbox" name="deletedItems" value="@Model.CS_tbLLTCTypeSub[j].CS_tbLLTC_ID">
                                </td>
                                <td>
                                    @using (Ajax.BeginForm("DetailsEditGet", new AjaxOptions
                                    {
                                        HttpMethod = "Get",
                                        InsertionMode = System.Web.Mvc.Ajax.InsertionMode.Replace

                                    }))
                                    {
                                        <button type="submit" class="btn-sub btn-block" disabled><b>Sửa</b></button>
                                    }
                                </td>
                                <td>
                                    @using (Ajax.BeginForm("DetailsDeleteGet", new AjaxOptions
                                    {
                                        HttpMethod = "Get",
                                        InsertionMode = System.Web.Mvc.Ajax.InsertionMode.Replace
                                    }))
                                    {
                                        <button type="submit" class="btn-sub btn-block" disabled><b>Xóa</b></button>
                                    }
                                </td>

                            </tr>
                                    i++;
                                    j++;
                        }
                    </tbody>
                </table>
            </div>
            <div class="panel-footer"><b></b></div>
        </div>
    </div>
</div>
