@model Models.CS_tbConstructioSiteTypeViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<div class="row">
    <div class="col-lg-3">
        <!-- /.panel-heading -->
        <div class="panel-body-2">
            <button type="submit" onclick=" window.open('/CS_tbConstructionSiteType/Create', 'windowName', 'width=700, height=400, left=24, top=24, scrollbars, resizable')" style=" margin-left:0px; margin-bottom:10px" class="btn btn-primary"><b>+ TẠO MỚI THÔNG TIN</b></button>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Loại Công Trường</th>
                            <th>Sửa</th>
                            <th>Xóa</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int i = 1;}
                        @foreach (var item in Model.CS_tbConstructionSiteType )
                        {
                            <tr class="odd gradeX">
                                <td>@i</td>
                                <td>@item.Type</td>
                                <td>
                                    <button type="submit" onclick="window.open('/CS_tbConstructionSiteType/Edit/'+@item.ID , 'windowName', 'width=700, height=400, left=24, top=24, scrollbars, resizable')" class="btn-sub btn-success"><b>Sửa</b></button>
                                </td>
                                <td>
                                    <button type="submit" onclick="window.open('/CS_tbConstructionSiteType/Delete/'+@item.ID , 'windowName', 'width=700, height=400, left=24, top=24, scrollbars, resizable')" class="btn-sub btn-danger"><b>Xóa</b></button>
                                </td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
             </div>
        </div>
    </div>
</div>


