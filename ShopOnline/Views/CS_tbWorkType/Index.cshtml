@model Models.CS_tbWorkTypeViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-3">
        <!-- /.panel-heading -->
        <div class="panel-body-2">
            <button type="submit" onclick=" window.open('/CS_tbWorkType/Create', 'windowName', 'width=700, height=400, left=24, top=24, scrollbars, resizable')" style=" margin-left:0px; margin-bottom:10px" class="btn btn-primary"><b>+ TẠO MỚI THÔNG TIN</b></button>
        </div>
    </div>
</div>

<div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <label style="background-color: #07347E; color: white; border-radius: 5px; padding: 5px; display: block; "> LỌC THEO DANH SÁCH CÔNG VIỆC CHÍNH: </label>
                    <div class="form-group">
                        @using (Ajax.BeginForm("Details", new AjaxOptions
                    {
                        HttpMethod = "Get",
                        InsertionMode = System.Web.Mvc.Ajax.InsertionMode.Replace
                    }))
                        {
                            @Html.DropDownListFor(model => model.CS_tbWorkTypeSelect.CoreWorkType, new List<SelectListItem>()
                                            {
                                                 new SelectListItem(){ Text = "-- Chọn Công Việc Chính --",   Value = "-- Chọn Công Việc Chính --"},
                                                 new SelectListItem(){ Text = "Kết Cấu",   Value = "Kết Cấu"},
                                                 new SelectListItem(){ Text = "MEP", Value = "MEP"},
                                                 new SelectListItem(){ Text = "Hoàn Thiện", Value = "Hoàn Thiện"},
                                                 new SelectListItem(){ Text = "Xây Tô", Value = "Xây Tô"},
                                                 new SelectListItem(){ Text = "Công Việc Khác", Value = "Công Việc Khác"}
                                            }, new { @class = "form-control", @onchange = "$(this.form).submit();" })
                            @Html.ValidationMessageFor(model => Model.CS_tbWorkTypeSelect.CoreWorkType, null, new { @class = "text-danger", style = "font-weight:bold" })
                        }
                    </div>
                    <div id="dvCategoryResults">
                        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Công Việc Chính</th>
                                    <th>Công Việc Phụ</th>
                                    <th>Chọn</th>
                                    <th>Xóa</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{int i = 1;}
                                @foreach (var item in Model.CS_tbWorkType)
                                {
                                    <tr class="odd gradeX">
                                        <td>@i</td>
                                        <td>@item.CoreWorkType</td>
                                        <td>@item.SubWorkType</td>
                                        <td>
                                            <button type="submit" onclick="window.open('/CS_tbWorkType/Edit/'+@item.ID , 'windowName', 'width=700, height=400, left=24, top=24, scrollbars, resizable')" class="btn-sub btn-success"><b>Sửa</b></button>
                                        </td>
                                        <td>
                                            <button type="submit" onclick="window.open('/CS_tbWorkType/Delete/'+@item.ID , 'windowName', 'width=700, height=400, left=24, top=24, scrollbars, resizable')" class="btn-sub btn-danger"><b>Xóa</b></button>
                                        </td>
                                    </tr>
                                    i++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
</div>


