@model Models.CateloryViewModel

@{
    int counter = 3;
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_2.cshtml";
}
            <!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
              <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Công Trường</th>
                            <th>Tên ĐTC/NTP</th>
                            <th>Người Đại Diện/Đội Trưởng/Giám Đốc</th>
                            <th>Điện Thoại</th>
                            <th>Email</th>
                            <th>Quân Số</th>
                            <th>Ngày Tạo</th>
                            <th>Tình Trạng</th>
                            <th>Khu Vực</th>
                            <th>Đánh Giá Trung Bình</th>
                            <th>Chọn</th>
                            <th>Xóa</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model.Catelory)
                        { 
                        <tr class="odd gradeX">
                            <td>@item.ID</td>
                            @{
                                foreach (var item1 in Model.Project)
                                {   
                                    if (item.Prj_Name == item1.Project_Name ) {
                                        counter = 2;
                                        break;
                                    } else {
                                        counter = 1;
                                    }  
                                }
                                if (counter == 2)
                                {
                                    <td>@item.Prj_Name</td>
                                }
                                else if (counter == 1)
                                {
                                    <td style="color: red">@item.Prj_Name (Không tồn tại)</td>
                                    
                                }

                            }
                            <td>@item.Unit_Name</td>
                            <td>@item.Unit_Name</td>
                            <td>@item.Unit_Name</td>
                            <td>@item.Unit_Name</td>
                            <td>@item.Owner_Name</td>
                            <td>@item.Phone_Number</td>
                            <td>@item.Person_Number</td>
                            <td>@(item.Create_Date.HasValue ? @item.Create_Date.Value.ToString("dd/MM/yyyy") : "")</td>
                            <td class="center">@(item.Status.GetValueOrDefault(false)?"Hoạt Động":"Đã Ngưng")</td>
                            <td>

                                <form action="@Url.Action("Edit", "Catelory",  new { id = @item.ID })" method="post">
                                    <input type="submit" value="Select" />
                                </form>
                            </td>
                            <td>

                                <form action="@Url.Action("Delete", "Catelory", new { id = @item.ID })" method="post">
                                    <input type="submit" value="Delete" />
                                </form>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm("Index", "Catelory", FormMethod.Post))
                        {
                            <button type="submit" style="margin-left:0px; margin-bottom:10px" class="btn btn-primary">THÊM MỚI ĐỘI THI CÔNG</button>
                        }

                        @{
                            if (Model.DisplayMode == "Edit" ) { 
                                using (Html.BeginForm("Save", "Catelory",  new { id = Model.SelectedCatelory.ID }, FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true)

                                    <div class="form-group">
                                        <label>NHẬP TÊN CÔNG TRƯỜNG CHỈNH SỬA:</label>
                                    @Html.DropDownListFor(model => model.SelectedCatelory.Prj_Name, Model.ProjectAll, "-- Chọn Công Trường --", new { @class = "form-control" })
                                    </div>

                                    <div class="form-group">
                                        <label>NHẬP TÊN ĐỘI CHỈNH SỬA:</label>
                                        @Html.TextBoxFor(model => model.SelectedCatelory.Unit_Name, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.SelectedCatelory.Unit_Name, null, new { @class = "danger" })
                                    </div>

                                    <div class="form-group">
                                        <label>NHẬP TÊN NGƯỜI ĐẠI DIỆN CHỈNH SỬA:</label>
                                        @Html.TextBoxFor(model => model.SelectedCatelory.Owner_Name, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.SelectedCatelory.Owner_Name, null, new { @class = "danger" })
                                    </div>

                                    <div class="form-group">
                                        <label>NHẬP SỐ ĐIỆN THOẠI CHỈNH SỬA:</label>
                                        @Html.TextBoxFor(model => model.SelectedCatelory.Phone_Number, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.SelectedCatelory.Phone_Number, null, new { @class = "danger" })
                                    </div>

                                    <div class="form-group">
                                        <label>NHẬP SỐ QUÂN SỐ CHỈNH SỬA: </label>
                                        @Html.TextBoxFor(model => model.SelectedCatelory.Person_Number, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.SelectedCatelory.Person_Number, null, new { @class = "danger" })
                                    </div>

                                    <div class="form-group">
                                        <label>NHẬP LẠI TÌNH TRẠNG </label>
                                        @Html.DropDownListFor(model => model.SelectedCatelory.Status, new List<SelectListItem>()
                                       {
                                            new SelectListItem(){Selected = true, Text = "Hoạt Động", Value = "1"},
                                            new SelectListItem(){Selected = false, Text = "Đã Ngưng", Value = "0"}
                                       }, new { @class = "form-control" })
                                    </div>

                                    <p>
                                        <button type="submit" class="btn btn-primary" value="Lưu">LƯU</button>
                                    </p>       
                                }
                            }
                            else
                            {
                                using (Html.BeginForm("Create", "Catelory", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true)

                                    <div class="form-group">
                                        <label>NHẬP MỚI CÔNG TRƯỜNG:</label>
                                    @Html.DropDownListFor(model => model.SelectedCatelory.Prj_Name, Model.ProjectAll, "-- Chọn Công Trường --", new { @class = "form-control" })
                                    </div>

                                    <div class="form-group">
                                        <label>NHẬP MỚI TÊN ĐỘI:</label>
                                        @Html.TextBoxFor(model => model.SelectedCatelory.Unit_Name, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.SelectedCatelory.Unit_Name, null, new { @class = "danger" })
                                    </div>

                                    <div class="form-group">
                                        <label>NHẬP MỚI NGƯỜI ĐẠI DIỆN:</label>
                                        @Html.TextBoxFor(model => model.SelectedCatelory.Owner_Name, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.SelectedCatelory.Owner_Name, null, new { @class = "danger" })
                                    </div>

                                    <div class="form-group">
                                        <label>NHẬP MỚI ĐIỆN THOẠI: </label>
                                        @Html.TextBoxFor(model => model.SelectedCatelory.Phone_Number, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.SelectedCatelory.Phone_Number, null, new { @class = "danger" })
                                    </div>

                                    <div class="form-group">
                                        <label>NHẬP MỚI QUÂN SỐ: </label>
                                        @Html.TextBoxFor(model => model.SelectedCatelory.Person_Number, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.SelectedCatelory.Person_Number, null, new { @class = "danger" })
                                    </div>

                                    <div class="form-group">
                                        <label>NHẬP MỚI TÌNH TRẠNG: </label>
                                        @Html.DropDownListFor(model => model.SelectedCatelory.Status, new List<SelectListItem>()
                                       {
                                            new SelectListItem(){Selected = true, Text = "Hoạt Động", Value = "1"},
                                            new SelectListItem(){Selected = false, Text = "Đã Ngưng", Value = "0"}
                                       }, new { @class = "form-control" })
                                    </div>

                                    <p>
                                        <button type="submit" class="btn btn-primary" value="Thêm">THÊM</button>
                                    </p>       
                                }                                
                            }                             
                            
                        }

                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>





