@model Models.CateloryViewModel

@{
    int counter = 3;
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_2.cshtml";
}
            <!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Công Trường</th>
                            <th>Tên Đội</th>
                            <th>Người Đại Diện</th>
                            <th>Điện Thoại</th>
                            <th>Quân Số</th>
                            <th>Ngày Tạo</th>
                            <th>Tình Trạng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model.Catelory)
                        { 
                        <tr class="odd gradeX">
                            <td>@item.ID</td>
                            @{
                                foreach (var item1 in Model.Project)
                                {   
                                    if (item.Prj_Name == item1.Project_Name ) {
                                        counter = 2;
                                        break;
                                    } else {
                                        counter = 1;
                                    }  
                                }
                                if (counter == 2)
                                {
                                    <td>@item.Prj_Name</td>
                                }
                                else if (counter == 1)
                                {
                                    <td style="color: red">@item.Prj_Name (Không tồn tại)</td>
                                    
                                }

                            }
                            <td>@item.Unit_Name</td>
                            <td>@item.Owner_Name</td>
                            <td>@item.Phone_Number</td>
                            <td>@item.Person_Number</td>
                            <td>@(item.Create_Date.HasValue ? @item.Create_Date.Value.ToString("dd/MM/yyyy") : "")</td>
                            <td class="center">@(item.Status.GetValueOrDefault(false)?"Hoạt Động":"Đã Ngưng")</td>
                        </tr>
                        }
                    </tbody>
                </table>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">

                        @using (Html.BeginForm("Create", "Catelory", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)

                            <div class="form-group">
                                <label>CÔNG TRƯỜNG</label>
                            @Html.DropDownListFor(model => model.SelectedCatelory.Prj_Name, Model.ProjectAll, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label>TÊN ĐỘI</label>
                                @Html.TextBoxFor(model => model.SelectedCatelory.Unit_Name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.SelectedCatelory.Unit_Name, null, new { @class = "danger" })
                            </div>

                            <div class="form-group">
                                <label> NGƯỜI ĐẠI DIỆN </label>
                                @Html.TextBoxFor(model => model.SelectedCatelory.Owner_Name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.SelectedCatelory.Owner_Name, null, new { @class = "danger" })
                            </div>

                            <div class="form-group">
                                <label> ĐIỆN THOẠI </label>
                                @Html.TextBoxFor(model => model.SelectedCatelory.Phone_Number, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.SelectedCatelory.Phone_Number, null, new { @class = "danger" })
                            </div>

                            <div class="form-group">
                                <label> QUÂN SỐ </label>
                                @Html.TextBoxFor(model => model.SelectedCatelory.Person_Number, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.SelectedCatelory.Person_Number, null, new { @class = "danger" })
                            </div>

                            <div class="form-group">
                                <label> TÌNH TRẠNG </label>
                                @Html.DropDownListFor(model => model.SelectedCatelory.Status, new List<SelectListItem>()
                               {
                                    new SelectListItem(){Selected = true, Text = "Hoạt Động", Value = "1"},
                                    new SelectListItem(){Selected = false, Text = "Đã Ngưng", Value = "0"}
                               }, new { @class = "form-control" })
                            </div>

                            <p>
                                <input type="submit" value="Thêm" />
                            </p>
                        }
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>





