@model Models.Framework.ProjectViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tên Dự Án</th>
                            <th>Chọn</th>
                            <th>Xóa</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Project)
                        {
                            <tr class="odd gradeX">
                                <td>@item.ID</td>
                                <td>@item.Project_Name</td>
                                <td>

                                    <form action="@Url.Action("Edit", "Project",  new { id = @item.ID })" method="post">
                                        <input type="submit" value="Select" />
                                    </form>
                                </td>
                                 <td>
                                    <form action="@Url.Action("Delete", "Project", new { id = @item.ID })" method="post">
                                        <input type="submit" value="Delete" />
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @{
                            if (Model.DisplayMode == "Edit" ) { 
                                using (Html.BeginForm("Save", "Project",  new { id = Model.SelectedProject.ID }, FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true)
                            
                                    <label> @Html.LabelFor(model => model.SelectedProject.Project_Name) </label>
                                    <div class="form-group">
                                            @Html.TextBoxFor(model => model.SelectedProject.Project_Name, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.SelectedProject.Project_Name, null, new { @class = "danger"})
                                   </div>
                                    <p>
                                        <input type="submit" value="Lưu" />
                                    </p>
                                }
                            }
                            else
                            {
                                using (Html.BeginForm("Create", "Project", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true)
                            
                                    <label> @Html.LabelFor(model => model.SelectedProject.Project_Name) </label>
                                    <div class="form-group">
                                            @Html.TextBoxFor(model => model.SelectedProject.Project_Name, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.SelectedProject.Project_Name, null, new { @class = "danger"})
                                   </div>
                                    <p>
                                        <input type="submit" value="Thêm" />
                                    </p>
                                }
                            }
                        }
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
